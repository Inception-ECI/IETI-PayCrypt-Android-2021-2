<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorFagments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal.InicioFragment">


    <ImageView
        android:id="@+id/imagenPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/teal_700" />

    <TextView
       android:id="@+id/titulo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Paycript"
       android:textColor="@color/black"
       android:textAlignment="center"
       android:textSize="40sp"
       android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="300"
            android:insetRight="100"
            android:text="Generar Link" />

        <Button
            android:id="@+id/ListadoTransacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="30"
            android:insetRight="100"
            android:text="Transacciones" />

        <Button
            android:id="@+id/valorCrypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="30"
            android:insetRight="100"
            android:text="Valor Criptomonedas" />

        <Button
            android:id="@+id/perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="30"
            android:insetRight="100"
            android:text="Perfil" />

        <Button
            android:id="@+id/cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="30"
            android:insetRight="100"
            android:text="Cuentas asociadas" />

        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:insetLeft="100"
            android:insetTop="30"
            android:insetRight="100"
            android:text="Salir" />

    </LinearLayout>


</RelativeLayout>